# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# App Configuration
APP_NAME=PDV Food App
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
